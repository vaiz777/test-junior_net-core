@model List<ExportApp.Models.Siswa>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Laporan Ranking Siswa</title>
    <style>
        body { font-family: Arial, sans-serif; font-size: 12px; }
        table { border-collapse: collapse; width: 100%; margin-top: 20px; }
        th, td { border: 1px solid #333; padding: 8px; text-align: center; }
        th { background-color: #f2f2f2; }
        h2 { text-align: center; }
    </style>
</head>
<body>
    <h2>Laporan Ranking Siswa</h2>
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Nilai</th>
                <th>Peringkat</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Nama</td>
                    <td>@Model[i].Nilai</td>
                    <td>@Model[i].RankNilai</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
